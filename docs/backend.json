
{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the pizza restaurant's menu.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        },
        "price": {
          "type": "number"
        },
        "categoryId": {
          "type": "string"
        },
        "isAvailable": {
          "type": "boolean"
        },
        "isPromotion": {
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "description",
        "imageUrl",
        "price",
        "categoryId",
        "isAvailable"
      ]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a category of products.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "order": {
          "type": "number"
        }
      },
      "required": [
        "name"
      ]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents a customer order.",
      "properties": {
        "id": {
          "type": "string"
        },
        "customerName": {
          "type": "string"
        },
        "customerAddress": {
          "type": "string"
        },
        "customerPhoneNumber": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "totalAmount": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": ["New", "Preparing", "Out for Delivery", "Delivered"]
        }
      },
      "required": [
        "customerName",
        "customerAddress",
        "customerPhoneNumber",
        "createdAt",
        "totalAmount",
        "status"
      ]
    },
    "OrderItem": {
      "title": "OrderItem",
      "type": "object",
      "properties": {
        "productId": { "type": "string" },
        "name": { "type": "string" },
        "quantity": { "type": "number" },
        "price": { "type": "number" },
        "size": { "type": "string" },
        "crust": { "type": "string" },
        "notes": { "type": "string" }
      }
    },
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "properties": {
        "uid": { "type": "string" },
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "number": { "type": "string" },
        "neighborhood": { "type": "string" },
        "complement": { "type": "string" }
      }
    },
    "Banner": {
      "title": "Banner",
      "type": "object",
      "properties": {
        "imageUrl": { "type": "string", "format": "uri" },
        "isActive": { "type": "boolean" }
      }
    },
    "Configuration": {
      "title": "Configuration",
      "type": "object",
      "properties": {
        "restaurantName": { "type": "string" },
        "whatsappNumber": { "type": "string" },
        "primaryColor": { "type": "string" },
        "deliveryFee": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "produtos": {
      "schema": "#/backend/entities/Product",
      "description": "Menu products"
    },
    "categorias": {
      "schema": "#/backend/entities/Category",
      "description": "Product categories"
    },
    "pedidos": {
      "schema": "#/backend/entities/Order",
      "description": "Customer orders"
    },
    "pedidos/{orderId}/items": {
      "schema": "#/backend/entities/OrderItem",
      "description": "Items for a specific order"
    },
    "users": {
      "schema": "#/backend/entities/UserProfile",
      "description": "Customer profiles"
    },
    "banners": {
      "schema": "#/backend/entities/Banner",
      "description": "Promotional banners"
    },
    "configuracoes": {
      "schema": "#/backend/entities/Configuration",
      "description": "App settings"
    }
  }
}
